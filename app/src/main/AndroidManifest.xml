<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cemdeniz.sudokuapp">

    <application
        android:allowBackup="true"
        android:logo="@drawable/icon"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SudokuMain.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SudokuDifficulties.BeginnerSudoku"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".SudokuDifficulties.IntermediateSudoku"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".SudokuDifficulties.AdvancedSudoku"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".SudokuDifficulties.ExpertSudoku"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".SudokuDifficulties.HardestSudoku"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".SudokuTools.CompleteSudoku"
            android:windowSoftInputMode="adjustPan"/>



    </application>

</manifest>