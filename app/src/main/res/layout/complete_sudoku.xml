<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/complete_sudoku"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="#e2d6d6">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="✓ Complete Sudoku ✓"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold|italic" />


    <GridView
        android:id="@+id/CompleteSudokuGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_row_border"
        android:gravity="center"
        android:horizontalSpacing="3dp"
        android:numColumns="9"
        android:padding="5dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="14dp"
            android:text="This is completed view of the sudoku, you can look at this if you stucked at somewhere :)"/>

    </LinearLayout>

</RelativeLayout>
